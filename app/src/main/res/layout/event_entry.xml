<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/event_name"
        android:paddingTop="8sp"
        android:paddingLeft="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:paddingBottom="6sp"/>

    <TextView
        android:id="@+id/event_location"
        android:paddingLeft="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_name"
        android:textSize="20sp"
        android:paddingBottom="1sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_date"
        android:paddingLeft="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_location"
        android:textSize="20sp"
        android:paddingBottom="1sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_time"
        android:paddingLeft="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_date"
        android:textSize="20sp"
        android:paddingBottom="10sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_location"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:paddingRight="40sp"
        android:paddingBottom="1sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_price"
        android:layout_alignLeft="@+id/event_price"
        android:layout_alignStart="@+id/event_price"
        android:textSize="20sp"
        android:paddingRight="40sp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/event_limit"
        android:layout_marginEnd="31dp"
        android:layout_marginLeft="31sp"
        android:layout_marginRight="15dp"
        android:text="@string/add_button"
        android:textSize="15sp"
        android:theme="@style/AppTheme.Button"/>
</RelativeLayout>